
<p id="notice"><%= notice %></p>


<div class="card" style="width: 70%; margin: auto;">
  <div class="card-body">
    <h2 class="card-title align-left">Contacts List</h2>
    <div class='btn btn-success btn-sm align-right'>
      <%= link_to 'Create New Contact', new_contact_path %>
    </div>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Contact number</th>
          <th>Name</th>
          <th>Address</th>
          <th>Reward Points</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.contact_number %></td>
            <td><%= contact.name %></td>
            <td><%= contact.address %></td>
            <td><%= contact.purchases.pluck(:reward_points).reduce(:+) %></td>
            <td><span class="btn btn-xs btn-primary"><%= link_to 'Show', contact %></span></td>
            <td><span class="btn btn-xs btn-secondary"><%= link_to 'Edit', edit_contact_path(contact) %></span></td>
            <td><span class="btn btn-xs btn-danger"><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

